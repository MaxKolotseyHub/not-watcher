{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "downlevelIteration": true,
    "module": "commonjs",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ]
}
